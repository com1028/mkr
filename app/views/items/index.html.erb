                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[26],"27"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[27],"28"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[28],"29"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[29],"30"],
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[30],"31"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[31],"32"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[32],"33"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[33],"34"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[34],"35"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[35],"36"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[36],"37"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[37],"38"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[38],"39"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[39],"40"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[40],"41"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[41],"42"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[42],"43"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[43],"44"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[44],"45"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[45],"46"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[46],"47"]],
                    :selected=>item.shipping_from_area)
                %>
            </td>        
            <td class='price'>
                <div style="display:inline-flex"><input type='text' value='<%= item.price %>'>円</div>
            </td>
            <td class='contents'><%= item.contents %></td>
            <td class='auto_exhibit_flag'>
                <%= 
                    select_tag '#', options_for_select(
                    [[ItemConstant::AUTO_EXHIBIT_FLAG_OPTIONS[0],true], 
                    [ItemConstant::AUTO_EXHIBIT_FLAG_OPTIONS[1],false]],
                    :selected=>item.auto_exhibit_flag)
                %>
            </td>
            <td>
                <%= link_to '更新', "javascript:click_update_item(#{item.id})", class: 'btn btn-info' %>
                <%= link_to '詳細情報を編集', "#", class: 'btn btn-success' %>
            </td>
        </tr>
    <% end %>
</table>