<%= link_to '商品を追加', new_item_path(mercari_user_id: @mercari_user.id)  %>
<h2>商品データ一覧</h2>

<%= link_to '商品を削除', 'javascript:item_delete_confirm()', class: 'btn btn-danger' %>
<%= link_to 'メルカリから商品を削除', '#', class: 'btn btn-warning' %>
<%= link_to '自動出品を開始', '#', class: 'btn btn-primary' %>
<%= link_to '自動出品を停止', '#', class: 'btn btn-success' %>
<p></p>
<table class="table table-striped">
    <th width="100" height=20></th>
    <th width="120">画像1</th>
    <th width="120">画像2</th>
    <th width="120">画像3</th>
    <th width="120">画像4</th>
    <th width="3000">商品名</th>
    <th width="200">カテゴリ</th>
    <th width="2500">発送までの日数</th>
    <th width="2000">商品の状態</th>
    <th width="2000">配送元の地域</th>
    <th width="2000">金額</th>
    <th width="500">内容</th>
    <th width="1500">自動出品</th>
    <th width="100"></th>

    <% @items.each do |item| %>
        <tr id='item<%= item.id %>'>
            <td height=100><%= check_box_tag "#{item.id}", true, false %></td>
            <% if item.image1.present? %>
                <td class='image1'><%= image_tag item.image1.thumb100.url %></td>
            <% else %>
                <td class='image1'>(No image)</td>
            <% end %>

            <% if item.image2.present? %>
                <td class='image2'><%= image_tag item.image2.thumb100.url %></td>
            <% else %>
                <td class='image2'>(No image)</td>
            <% end %>

            <% if item.image3.present?%>
                <td class='image3'><%= image_tag item.image3.thumb100.url %></td>
            <% else %>
                <td class='image3'>(No image)</td>
            <% end %>

            <% if item.image4.present?%>
                <td class='image4'><%= image_tag item.image4.thumb100.url %></td>
            <% else %>
                <td class='image4'>(No image)</td>
            <% end %>

            <td class='item_name'><input type='text' value='<%= item.item_name %>'></td>
            <td class='category'><%= item.category %></td>
            <td class='shipping_duration'>
                <%= 
                    select_tag '#', options_for_select(
                    [[ItemConstant::SHIPPING_DURATION_OPTIONS[0],"1"], 
                    [ItemConstant::SHIPPING_DURATION_OPTIONS[1],"2"], 
                    [ItemConstant::SHIPPING_DURATION_OPTIONS[2],"3"]],
                    :selected=>item.shipping_duration)
                %>
            </td>
            <td class='item_condition'>
                <%= 
                    select_tag '#', options_for_select(
                    [[ItemConstant::ITEM_CONDITION_OPTIONS[0],"1"], 
                    [ItemConstant::ITEM_CONDITION_OPTIONS[1],"2"], 
                    [ItemConstant::ITEM_CONDITION_OPTIONS[2],"3"], 
                    [ItemConstant::ITEM_CONDITION_OPTIONS[3],"4"], 
                    [ItemConstant::ITEM_CONDITION_OPTIONS[4],"5"]],
                    :selected=>item.item_condition)
                %>
            </td>
            <td class='shipping_from_area'>
                <%= 
                    select_tag '#', options_for_select(
                    [[ItemConstant::SHIPPING_FROM_AREA_OPTIONS[0],"1"],
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[1],"2"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[2],"3"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[3],"4"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[4],"5"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[5],"6"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[6],"7"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[7],"8"],
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[8],"9"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[9],"10"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[10],"11"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[11],"12"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[12],"13"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[13],"14"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[14],"15"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[15],"16"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[16],"17"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[17],"18"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[18],"19"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[19],"20"], 
                    [ItemConstant::SHIPPING_FROM_AREA_OPTIONS[20],"21"], 
