<%= form_for(@mercari_user) do |f| %>
    <%= render 'shared/error_messages' %>

    <% if @mercari_user.image_full_filepath? %>
        <%# 画像を一度選択している場合 %>
        <%= image_tag @mercari_user.image_full_filepath.url, :size => "300x300" %>
        <%= f.file_field :image_full_filepath %>
        <%= f.hidden_field :image_full_filepath_cache %>
        <br>
    <% else %>
        <%= f.label :image_full_filepath %><br>
        <%= f.file_field :image_full_filepath %>
    <% end %>
    

    <%= f.label :表示名 %>
    <%= f.text_field :name, class: 'form-control' %>

    <% if yield(:button_text).include?('更新') %>

    <p>※ メールアドレス、パスワードは更新することができません。</p>
    <p>更新が必要な場合は、<%= link_to 'こちら', new_mercari_user_path %>から新規アカウントを新たに作成してください。</p>
    <br>
    
    <% else %>

        <%= f.label :メルカリのメールアドレス %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :メルカリのパスワード %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "メルカリのパスワード（確認用）" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

    <% end %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
